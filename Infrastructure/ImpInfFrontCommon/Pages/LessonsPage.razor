@page "/Lessons"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization;

<PageTitle>Предметы</PageTitle>

<div class="d-flex flex-column h-100">
    <div class="d-flex align-items-center m-3">
        <div class="header">Расписание занятий</div>
    </div>

    <div class="overflow-hidden align-items-center">
        @for (int i = 0; i < lessons.Count(); i = i + 2)
        {
            <div class="d-sm-flex flex-sm-row w-100">
                <div class="col-sm-6 p-3 m-3">
                    <LessonCard Lesson="lessons[i]"/>
                </div>
                <div class="col-sm-6 p-3 m-3">
                    <LessonCard Lesson="lessons[i + 1]"/>
                </div>
            </div>
        }
    </div>
</div>