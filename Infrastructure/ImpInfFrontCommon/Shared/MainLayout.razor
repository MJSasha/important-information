@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>
            <main>
                <div class="top-row px-4">
                    <NavLink class="nav-link" href="@PagesRouts.Logout" Match="NavLinkMatch.All">
                        <SvgImage Src="image/logout.svg#icon" class="nav-icon hover" style="color:var(--secondary-button-color); " />
                    </NavLink>
                </div>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>