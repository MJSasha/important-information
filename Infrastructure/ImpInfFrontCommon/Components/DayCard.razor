<div class="card bg-light h-100">
    <div class="card-header">@($"{Day.Date.DayOfWeek} ({Day.Date:dd.MM.yyyy})")</div>
    <div class="card-body d-md-flex">
        <div class="flex-md-column col-md-7">
        @if (Day.LessonsAndTimes.Any())
        {
            <div class="card-title">Расписание</div>
            @foreach (var item in Day.LessonsAndTimes)
            {
                <div class=" card-text ml-2">@($"•\t{item.Time:HH:mm} - {item.Lesson.Name} ({item.Type.GetName()})\n")</div>
            }
        }
        else
        {
                    <div class="card-title">Выходной</div>
        }
        </div>

        <div class="d-flex" style="height:auto;">
            <div class="vr d-none d-sm-block"></div>
        </div>

        <div class="flex-md-column col-md-5 ps-md-5">
            <div class="second-card-title">Тут информация</div>
            <div class="card-text fst-italic">Some quick example text to build on the card title and make up the bulk of the card's content.</div>
        </div>

    </div>
</div>

@code {

    [Parameter]
    public Day Day { get; set; }
}
